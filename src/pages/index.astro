---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PaperCard from '../components/PaperCard.astro';
import ProjectCard from '../components/ProjectCard.astro';
import SkillCard from '../components/SkillCard.astro';
import ConferenceCard from '../components/ConferenceCard.astro';

import { profile, about, publications, projects, readingList, skillCategories, conferencePhotos } from '../data/portfolio';
import { Github, Mail, MapPin, ArrowDown, ChevronRight, BookOpen, Cpu, Shield, Terminal, FileText, Linkedin, KeyRound, Camera, MessageCircle, Download } from 'lucide-astro';
---

<Layout>
  <Header />
  
  <main>
    <!-- ============================================ -->
    <!-- HERO SECTION -->
    <!-- ============================================ -->
    <section id="hero" class="relative min-h-screen flex items-center justify-center pt-16 overflow-hidden bg-slate-50 dark:bg-slate-900 transition-colors duration-300">
      <!-- Background Grid Pattern -->
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#e2e8f0_1px,transparent_1px),linear-gradient(to_bottom,#e2e8f0_1px,transparent_1px)] dark:bg-[linear-gradient(to_right,#1e293b_1px,transparent_1px),linear-gradient(to_bottom,#1e293b_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_110%)]"></div>
      
      <!-- Gradient Orbs -->
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-teal-500/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-sky-500/10 rounded-full blur-3xl"></div>
      
      <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <!-- Terminal-style intro - Centered with balanced visual weight -->
        <div class="inline-flex items-center justify-center gap-2 px-4 py-2 rounded-full bg-white/80 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700/50 mb-8 shadow-sm">
          <span class="text-sm font-mono text-slate-600 dark:text-slate-400">
            üìç {profile.location}
          </span>
        </div>
        
        <!-- Name -->
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-6 tracking-tight">
          <span class="text-slate-900 dark:text-slate-100">{profile.name.split(' ')[0]}</span>
          <span class="text-teal-600 dark:text-teal-400"> {profile.name.split(' ')[1]}</span>
        </h1>
        
        <!-- Title -->
        <p class="text-xl sm:text-2xl md:text-3xl font-mono text-slate-600 dark:text-slate-400 mb-6">
          {profile.title}
        </p>
        
        <!-- Tagline -->
        <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto mb-10 leading-relaxed">
          {profile.tagline}
        </p>
        
        <!-- CTA Buttons - Equal widths for optical balance -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-8">
          <a
            href={`mailto:${profile.email}`}
            class="group inline-flex items-center justify-center gap-2 w-full sm:w-48 px-6 py-3 text-base font-medium rounded-lg bg-teal-600 dark:bg-teal-500 text-white dark:text-slate-900 hover:bg-teal-500 dark:hover:bg-teal-400 transition-all duration-300 shadow-lg shadow-teal-500/25"
          >
            <Mail class="w-5 h-5" />
            Get in Touch
          </a>
          <a
            href={profile.resumeUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 w-full sm:w-48 px-6 py-3 text-base font-medium rounded-lg bg-white dark:bg-slate-800/50 text-slate-900 dark:text-slate-100 hover:bg-slate-100 dark:hover:bg-slate-800 border border-slate-200 dark:border-slate-700/50 hover:border-teal-500/50 transition-all duration-300 shadow-sm"
          >
            <Download class="w-5 h-5" />
            Download CV
          </a>
        </div>
        
        <!-- Social Icons -->
        <div class="flex items-center justify-center gap-3 flex-wrap">
          <a
            href={profile.github}
            target="_blank"
            rel="noopener noreferrer"
            class="p-3 text-slate-500 dark:text-slate-400 hover:text-teal-600 dark:hover:text-teal-400 hover:bg-slate-100 dark:hover:bg-slate-800/50 rounded-lg transition-colors"
            aria-label="GitHub"
            title="GitHub"
          >
            <Github class="w-6 h-6" />
          </a>
          {profile.linkedin && (
            <a
              href={profile.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="p-3 text-slate-500 dark:text-slate-400 hover:text-teal-600 dark:hover:text-teal-400 hover:bg-slate-100 dark:hover:bg-slate-800/50 rounded-lg transition-colors"
              aria-label="LinkedIn"
              title="LinkedIn"
            >
              <Linkedin class="w-6 h-6" />
            </a>
          )}
          <a
            href={`mailto:${profile.email}`}
            class="p-3 text-slate-500 dark:text-slate-400 hover:text-teal-600 dark:hover:text-teal-400 hover:bg-slate-100 dark:hover:bg-slate-800/50 rounded-lg transition-colors"
            aria-label="Email"
            title="Email"
          >
            <Mail class="w-6 h-6" />
          </a>
          {profile.signal && (
            <div class="group relative p-3 text-slate-500 dark:text-slate-400 hover:text-teal-600 dark:hover:text-teal-400 hover:bg-slate-100 dark:hover:bg-slate-800/50 rounded-lg transition-colors cursor-pointer" title="Signal">
              <MessageCircle class="w-6 h-6" />
              <span class="absolute -bottom-8 left-1/2 -translate-x-1/2 px-2 py-1 bg-white dark:bg-slate-800 text-xs text-teal-600 dark:text-teal-400 font-mono rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap border border-slate-200 dark:border-slate-700 shadow-sm">
                {profile.signal}
              </span>
            </div>
          )}
        </div>
        
        <!-- Scroll indicator -->
        <div class="mt-8 flex justify-center">
          <a href="#about" class="p-2 text-slate-400 dark:text-slate-500 hover:text-teal-600 dark:hover:text-teal-400 transition-colors animate-bounce">
            <ArrowDown class="w-6 h-6" />
          </a>
        </div>
      </div>
    </section>

    <!-- ============================================ -->
    <!-- ABOUT SECTION -->
    <!-- ============================================ -->
    <section id="about" class="py-24 bg-slate-100/50 dark:bg-slate-900/50 transition-colors duration-300">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="flex items-center gap-4 mb-12">
          <div class="p-2 rounded-lg bg-teal-500/10 text-teal-600 dark:text-teal-400">
            <Terminal class="w-6 h-6" />
          </div>
          <h2 class="text-3xl font-bold font-mono text-slate-900 dark:text-slate-100">
            <span class="text-teal-600 dark:text-teal-400">#</span> About
          </h2>
          <div class="flex-grow h-px bg-gradient-to-r from-slate-300 dark:from-slate-700 to-transparent"></div>
        </div>

        <div class="grid md:grid-cols-5 gap-12">
          <!-- Bio Text -->
          <div class="md:col-span-3">
            <p class="text-lg text-slate-700 dark:text-slate-300 leading-relaxed mb-6 whitespace-pre-line">
              {about.summary}
            </p>
            <div class="flex flex-wrap gap-3 mb-6">
              <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-md bg-white dark:bg-slate-800/50 text-slate-700 dark:text-slate-300 border border-slate-200 dark:border-slate-700/50 shadow-sm">
                <MapPin class="w-4 h-4 text-teal-600 dark:text-teal-400" />
                {profile.location}
              </span>
              <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-md bg-white dark:bg-slate-800/50 text-slate-700 dark:text-slate-300 border border-slate-200 dark:border-slate-700/50 shadow-sm">
                <KeyRound class="w-4 h-4 text-teal-600 dark:text-teal-400" />
                Cryptography R&D
              </span>
              <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-md bg-white dark:bg-slate-800/50 text-slate-700 dark:text-slate-300 border border-slate-200 dark:border-slate-700/50 shadow-sm">
                <Cpu class="w-4 h-4 text-teal-600 dark:text-teal-400" />
                Embedded Systems
              </span>
            </div>
            
            <!-- Research Insight Quote -->
            {about.researchInsight && (
              <blockquote class="border-l-4 border-teal-500/50 pl-4 py-2 bg-white dark:bg-slate-800/30 rounded-r-lg shadow-sm">
                <p class="text-sm text-slate-600 dark:text-slate-400 italic leading-relaxed">
                  "{about.researchInsight}"
                </p>
                <cite class="text-xs text-teal-600 dark:text-teal-400 font-mono mt-2 block">‚Äî Research Philosophy</cite>
              </blockquote>
            )}
          </div>

          <!-- Highlights -->
          <div class="md:col-span-2">
            <h3 class="text-sm font-mono text-slate-500 uppercase tracking-wider mb-4">Highlights</h3>
            <ul class="space-y-3">
              {about.highlights.map((item) => (
                <li class="flex items-start gap-3 text-slate-600 dark:text-slate-400">
                  <span class="text-teal-600 dark:text-teal-400 mt-1">‚ñπ</span>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
            
            <!-- LinkedIn Link -->
            {profile.linkedin && (
              <a 
                href={profile.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 mt-6 px-4 py-2 rounded-lg bg-white dark:bg-slate-800/50 text-teal-700 dark:text-teal-300 hover:text-teal-600 dark:hover:text-teal-400 border border-slate-200 dark:border-slate-700/50 hover:border-teal-500/50 transition-all shadow-sm"
              >
                <Linkedin class="w-4 h-4" />
                Connect on LinkedIn
              </a>
            )}
          </div>
        </div>
      </div>
    </section>

    <!-- ============================================ -->
    <!-- PUBLICATIONS / RESEARCH SECTION -->
    <!-- ============================================ -->
    <section id="publications" class="py-24 bg-white dark:bg-slate-950/50 transition-colors duration-300">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="flex items-center gap-4 mb-4">
          <div class="p-2 rounded-lg bg-teal-500/10 text-teal-600 dark:text-teal-400">
            <BookOpen class="w-6 h-6" />
          </div>
          <h2 class="text-3xl font-bold font-mono text-slate-900 dark:text-slate-100">
            <span class="text-teal-600 dark:text-teal-400">#</span> Research & Publications
          </h2>
          <div class="flex-grow h-px bg-gradient-to-r from-slate-300 dark:from-slate-700 to-transparent"></div>
        </div>
        
        <p class="text-slate-600 dark:text-slate-400 mb-12 max-w-3xl">
          My research revolves around building safe and secure cryptographic systems. I have so far published 2 papers on <strong class="text-teal-600 dark:text-teal-400">Hard-to-Find Bugs (HFBs)</strong> ‚Äî vulnerabilities that only manifest under rare conditions and evade conventional testing.
        </p>

        <!-- Publications List -->
        <div class="space-y-8">
          {publications.map((pub) => (
            <PaperCard {...pub} />
          ))}
        </div>
      </div>
    </section>

    <!-- ============================================ -->
    <!-- READING LIST SECTION (Simplified) -->
    <!-- ============================================ -->
    <section id="reading" class="py-24 bg-slate-100/50 dark:bg-slate-900/50 transition-colors duration-300">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="flex items-center gap-4 mb-4">
          <div class="p-2 rounded-lg bg-teal-500/10 text-teal-600 dark:text-teal-400">
            <BookOpen class="w-6 h-6" />
          </div>
          <h2 class="text-3xl font-bold font-mono text-slate-900 dark:text-slate-100">
            <span class="text-teal-600 dark:text-teal-400">#</span> What I Read
          </h2>
          <div class="flex-grow h-px bg-gradient-to-r from-slate-300 dark:from-slate-700 to-transparent"></div>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8 items-start">
          <!-- Description & PDF Link -->
          <div class="bg-white dark:bg-slate-800/40 border border-slate-200 dark:border-slate-700/50 rounded-xl p-6 shadow-sm">
            <p class="text-slate-700 dark:text-slate-300 leading-relaxed mb-6">
              {readingList.description}
            </p>
            
            <a
              href={readingList.pdfUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="group inline-flex items-center gap-3 px-5 py-3 rounded-lg bg-gradient-to-r from-teal-500/10 to-sky-500/10 text-teal-700 dark:text-teal-300 hover:text-teal-600 dark:hover:text-teal-200 hover:from-teal-500/20 hover:to-sky-500/20 border border-teal-500/30 hover:border-teal-400/50 transition-all duration-300"
            >
              <FileText class="w-5 h-5" />
              <span class="font-semibold">View Full Reading List (PDF)</span>
              <ChevronRight class="w-4 h-4 group-hover:translate-x-1 transition-transform" />
            </a>
            
            <p class="text-xs text-slate-500 mt-4 font-mono">
              Last updated: {readingList.lastUpdated}
            </p>
          </div>
          
          <!-- Highlights Preview -->
          <div>
            <h3 class="text-sm font-mono text-slate-500 uppercase tracking-wider mb-4">Featured Topics</h3>
            <ul class="space-y-3">
              {readingList.highlights.map((item) => (
                <li class="flex items-center gap-3 text-slate-700 dark:text-slate-300 bg-white dark:bg-slate-800/30 px-4 py-3 rounded-lg border border-slate-200 dark:border-slate-700/30 shadow-sm">
                  <BookOpen class="w-4 h-4 text-teal-600 dark:text-teal-400 flex-shrink-0" />
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- ============================================ -->
    <!-- CONFERENCE GALLERY SECTION -->
    <!-- ============================================ -->
    <section id="gallery" class="py-24 bg-white dark:bg-slate-950/50 transition-colors duration-300">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="flex items-center gap-4 mb-4">
          <div class="p-2 rounded-lg bg-teal-500/10 text-teal-600 dark:text-teal-400">
            <Camera class="w-6 h-6" />
          </div>
          <h2 class="text-3xl font-bold font-mono text-slate-900 dark:text-slate-100">
            <span class="text-teal-600 dark:text-teal-400">#</span> Conferences & Events
          </h2>
          <div class="flex-grow h-px bg-gradient-to-r from-slate-300 dark:from-slate-700 to-transparent"></div>
        </div>
        
        <p class="text-slate-600 dark:text-slate-400 mb-12 max-w-2xl">
          Presenting research and connecting with the cryptography community at international conferences.
        </p>

        <!-- Conference Gallery Grid -->
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {conferencePhotos.map((photo) => (
            <ConferenceCard {...photo} />
          ))}
        </div>
        
        {conferencePhotos.length === 0 && (
          <div class="text-center py-12 bg-slate-100 dark:bg-slate-800/30 rounded-xl border border-slate-200 dark:border-slate-700/30">
            <Camera class="w-12 h-12 text-slate-400 dark:text-slate-600 mx-auto mb-4" />
            <p class="text-slate-500">Conference photos coming soon</p>
          </div>
        )}
      </div>
    </section>

    <!-- ============================================ -->
    <!-- PROJECTS SECTION -->
    <!-- ============================================ -->
    <section id="projects" class="py-24 bg-slate-100/50 dark:bg-slate-900/50 transition-colors duration-300">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="flex items-center gap-4 mb-4">
          <div class="p-2 rounded-lg bg-teal-500/10 text-teal-600 dark:text-teal-400">
            <Cpu class="w-6 h-6" />
          </div>
          <h2 class="text-3xl font-bold font-mono text-slate-900 dark:text-slate-100">
            <span class="text-teal-600 dark:text-teal-400">#</span> Projects
          </h2>
          <div class="flex-grow h-px bg-gradient-to-r from-slate-300 dark:from-slate-700 to-transparent"></div>
        </div>
        
        <p class="text-slate-600 dark:text-slate-400 mb-12 max-w-2xl">
          Open-source tools and applications spanning security, cryptography, and systems programming.
        </p>

        <!-- Projects Grid -->
        <div class="grid sm:grid-cols-2 gap-6">
          {projects.filter(p => p.featured).map((project) => (
            <ProjectCard {...project} />
          ))}
        </div>
      </div>
    </section>

    <!-- ============================================ -->
    <!-- SKILLS / TECH STACK SECTION -->
    <!-- ============================================ -->
    <section id="skills" class="py-24 bg-white dark:bg-slate-950/50 transition-colors duration-300">
    <section class="py-24 bg-slate-100/50 dark:bg-slate-900/50 border-t border-slate-200 dark:border-slate-800/50 transition-colors duration-300">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-slate-100 mb-6">
          Let's Work Together
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-400 mb-10 max-w-2xl mx-auto">
          Interested in collaboration, research opportunities, or just want to discuss cryptography? I'd love to hear from you.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-6">
          {profile.signal && (
            <div class="group inline-flex items-center gap-3 px-8 py-4 text-lg font-medium rounded-lg bg-teal-600 dark:bg-teal-500 text-white dark:text-slate-900 shadow-lg shadow-teal-500/25">
              <MessageCircle class="w-5 h-5" />
              <span>Signal:</span>
              <span class="font-mono font-bold">{profile.signal}</span>
              <span class="text-xs opacity-75">(preferred)</span>
            </div>
          )}
          <a
            href={`mailto:${profile.email}`}
            class="group inline-flex items-center gap-2 px-8 py-4 text-lg font-medium rounded-lg bg-white dark:bg-slate-800/50 text-teal-700 dark:text-teal-300 hover:text-teal-600 dark:hover:text-teal-200 hover:bg-slate-50 dark:hover:bg-slate-800 border border-slate-200 dark:border-slate-700/50 hover:border-teal-500/50 transition-all duration-300 shadow-sm"
          >
            <Mail class="w-5 h-5" />
            Say Hello
            <ChevronRight class="w-5 h-5 group-hover:translate-x-1 transition-transform" />
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
