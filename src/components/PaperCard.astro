---
import { FileText, Code, ExternalLink, Github, CheckCircle } from 'lucide-astro';

interface Artifact {
  name: string;
  url: string;
  description: string;
}

interface Props {
  id: string;
  title: string;
  authors: string[];
  venue: string;
  year: number;
  context?: string;
  abstract: string;
  contributions: string[];
  artifacts: Artifact[];
  pdfUrl?: string;
  codeUrl?: string;
  tags: string[];
}

const { id, title, authors, venue, year, context, abstract, contributions, artifacts, pdfUrl, codeUrl, tags } = Astro.props;
---

<article class="group bg-white dark:bg-slate-800/40 border border-slate-200 dark:border-slate-700/50 rounded-xl overflow-hidden hover:border-teal-500/50 transition-all duration-300 shadow-sm">
  <!-- Header with year badge -->
  <div class="bg-gradient-to-r from-teal-100/50 dark:from-teal-900/30 to-slate-50 dark:to-slate-800/30 px-6 py-4 border-b border-slate-200 dark:border-slate-700/50">
    <div class="flex items-start justify-between gap-4">
      <div class="flex-1">
        <div class="flex items-center gap-3 mb-2">
          <span class="inline-flex items-center px-2.5 py-1 rounded text-xs font-mono font-bold bg-teal-500/20 text-teal-700 dark:text-teal-400 border border-teal-500/30">
            {year}
          </span>
          <span class="text-sm text-slate-500 dark:text-slate-400 font-mono">{venue}</span>
        </div>
        <h3 class="text-xl font-bold text-slate-900 dark:text-slate-100 leading-tight group-hover:text-teal-600 dark:group-hover:text-teal-400 transition-colors">
          {title}
        </h3>
      </div>
    </div>
    
    <!-- Authors -->
    <p class="mt-3 text-sm text-slate-500 dark:text-slate-400">
      {authors.join(", ")}
    </p>
  </div>

  <!-- Body -->
  <div class="px-6 py-5 space-y-5">
    <!-- Abstract -->
    <div>
      <h4 class="text-xs font-mono text-slate-500 uppercase tracking-wider mb-2">Abstract</h4>
      <p class="text-sm text-slate-700 dark:text-slate-300 leading-relaxed">
        {abstract}
      </p>
    </div>

    <!-- Key Technical Contributions -->
    <div>
      <h4 class="text-xs font-mono text-slate-500 uppercase tracking-wider mb-3">Key Technical Contributions</h4>
      <ul class="space-y-2">
        {contributions.map((contribution) => (
          <li class="flex items-start gap-3 text-sm text-slate-700 dark:text-slate-300">
            <CheckCircle class="w-4 h-4 text-teal-600 dark:text-teal-400 mt-0.5 flex-shrink-0" />
            <span>{contribution}</span>
          </li>
        ))}
      </ul>
    </div>

    <!-- Artifacts -->
    {artifacts.length > 0 && (
      <div>
        <h4 class="text-xs font-mono text-slate-500 uppercase tracking-wider mb-3">Research Artifacts</h4>
        <div class="flex flex-wrap gap-3">
          {artifacts.map((artifact) => (
            <a
              href={artifact.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group/artifact inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-gradient-to-r from-teal-500/10 to-emerald-500/10 text-teal-700 dark:text-teal-300 hover:text-teal-600 dark:hover:text-teal-200 hover:from-teal-500/20 hover:to-emerald-500/20 border border-teal-500/30 hover:border-teal-400/50 transition-all duration-300"
            >
              <Github class="w-4 h-4" />
              <span class="font-mono font-semibold">{artifact.name}</span>
              <ExternalLink class="w-3 h-3 opacity-50 group-hover/artifact:opacity-100 transition-opacity" />
            </a>
          ))}
        </div>
      </div>
    )}

    <!-- Tags -->
    <div class="flex flex-wrap gap-2 pt-2">
      {tags.map((tag) => (
        <span class="px-2 py-1 text-xs rounded bg-slate-100 dark:bg-slate-700/50 text-slate-600 dark:text-slate-400 border border-slate-200 dark:border-slate-600/30 font-mono">
          {tag}
        </span>
      ))}
    </div>
  </div>

  <!-- Footer with action buttons -->
  <div class="px-6 py-4 bg-slate-50 dark:bg-slate-900/30 border-t border-slate-200 dark:border-slate-700/50 flex flex-wrap gap-3">
    {pdfUrl && pdfUrl !== "#" && (
      <a
        href={pdfUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-lg bg-slate-100 dark:bg-slate-700/50 text-slate-700 dark:text-slate-200 hover:bg-slate-200 dark:hover:bg-slate-700 hover:text-slate-900 dark:hover:text-white border border-slate-200 dark:border-slate-600/50 transition-all"
      >
        <FileText class="w-4 h-4" />
        View PDF
      </a>
    )}
    {codeUrl && codeUrl !== "#" && (
      <a
        href={codeUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-lg bg-slate-100 dark:bg-slate-700/50 text-slate-700 dark:text-slate-200 hover:bg-slate-200 dark:hover:bg-slate-700 hover:text-slate-900 dark:hover:text-white border border-slate-200 dark:border-slate-600/50 transition-all"
      >
        <Code class="w-4 h-4" />
        Source Code
      </a>
    )}
  </div>
</article>
