---
import { profile } from '../data/portfolio';
import { Github, Mail, Linkedin, Twitter } from 'lucide-astro';

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-slate-200 dark:border-slate-800/50 bg-slate-50 dark:bg-slate-900/50 transition-colors duration-300">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <!-- Left: Logo/Name -->
      <div class="text-center md:text-left">
        <p class="font-mono font-bold text-lg text-slate-900 dark:text-slate-100">
          <span class="text-teal-600 dark:text-teal-400">&gt;</span> {profile.name.split(' ')[0].toLowerCase()}_
        </p>
        <p class="text-sm text-slate-500 mt-1">
          {profile.title}
        </p>
      </div>

      <!-- Center: Social Links -->
      <div class="flex items-center gap-4">
        {profile.github && (
          <a
            href={profile.github}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 text-slate-500 dark:text-slate-400 hover:text-teal-600 dark:hover:text-teal-400 hover:bg-slate-100 dark:hover:bg-slate-800/50 rounded-lg transition-colors"
            aria-label="GitHub"
          >
            <Github class="w-5 h-5" />
          </a>
        )}
        {profile.linkedin && (
          <a
            href={profile.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 text-slate-500 dark:text-slate-400 hover:text-teal-600 dark:hover:text-teal-400 hover:bg-slate-100 dark:hover:bg-slate-800/50 rounded-lg transition-colors"
            aria-label="LinkedIn"
          >
            <Linkedin class="w-5 h-5" />
          </a>
        )}
        {profile.email && (
          <a
            href={`mailto:${profile.email}`}
            class="p-2 text-slate-500 dark:text-slate-400 hover:text-teal-600 dark:hover:text-teal-400 hover:bg-slate-100 dark:hover:bg-slate-800/50 rounded-lg transition-colors"
            aria-label="Email"
          >
            <Mail class="w-5 h-5" />
          </a>
        )}
        {profile.twitter && (
          <a
            href={profile.twitter}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 text-slate-500 dark:text-slate-400 hover:text-teal-600 dark:hover:text-teal-400 hover:bg-slate-100 dark:hover:bg-slate-800/50 rounded-lg transition-colors"
            aria-label="Twitter"
          >
            <Twitter class="w-5 h-5" />
          </a>
        )}
      </div>

      <!-- Right: Copyright -->
      <div class="text-center md:text-right">
        <p class="text-sm text-slate-500">
          Â© {currentYear} {profile.name}
        </p>
        <p class="text-xs text-slate-500 dark:text-slate-600 mt-1">
          Built with <span class="text-teal-600 dark:text-teal-500">Astro</span> & <span class="text-teal-600 dark:text-teal-500">Tailwind</span>
        </p>
      </div>
    </div>
  </div>
</footer>
