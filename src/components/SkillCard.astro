---
import { Code, Shield, Terminal, Layers, KeyRound } from 'lucide-astro';

interface Props {
  name: string;
  icon: string;
  skills: string[];
}

const { name, icon, skills } = Astro.props;

// Map icon names to components
const iconMap: Record<string, any> = {
  code: Code,
  shield: Shield,
  terminal: Terminal,
  layers: Layers,
  key: KeyRound,
};

const IconComponent = iconMap[icon] || Code;
---

<div class="bg-white dark:bg-slate-800/30 border border-slate-200 dark:border-slate-700/30 rounded-lg p-6 hover:border-teal-500/30 transition-all duration-300 shadow-sm">
  <!-- Header -->
  <div class="flex items-center gap-3 mb-4">
    <div class="p-2 rounded-lg bg-teal-500/10 text-teal-600 dark:text-teal-400">
      <IconComponent class="w-5 h-5" />
    </div>
    <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100 font-mono">
      {name}
    </h3>
  </div>

  <!-- Skills -->
  <div class="flex flex-wrap gap-2">
    {skills.map((skill) => (
      <span class="px-3 py-1.5 text-sm rounded-md bg-slate-100 dark:bg-slate-900/50 text-slate-700 dark:text-slate-300 border border-slate-200 dark:border-slate-700/50 hover:border-teal-500/30 hover:text-teal-600 dark:hover:text-teal-400 transition-colors">
        {skill}
      </span>
    ))}
  </div>
</div>
